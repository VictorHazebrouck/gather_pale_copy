{
    "plugins": ["plugins/markdown", "node_modules/jsdoc-plugin-typescript"],
    "recurseDepth": 10,
    "opts": {
        "template": "node_modules/docdash",
        "destination": "./docs",
        "recursive": true
    },
    "source": {
        "includePattern": ".+\\.js(doc|x)?$",
        "excludePattern": "(^|\\/|\\\\)_"
    },
    "sourceType": "module",
    "tags": {
        "allowUnknownTags": true,
        "dictionaries": ["jsdoc", "closure"]
    },
    "templates": {
        "cleverLinks": false,
        "monospaceLinks": false
    },
    "typescript": {
        "moduleRoot": "./src/"
    },
    "docdash": {
        "typedefs": true,
        "search": true,
        "collapse": true
    }
}
