{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ESNext",
        "allowJs": true,
        "checkJs": true,
        "strict": true,
        "noEmit": true,
        "resolveJsonModule": true,
        "allowSyntheticDefaultImports": true,
        "moduleResolution": "node",
        "baseUrl": "./",
        "paths": {
            "*": ["node_modules/*"]
        }
    },
    "include": ["./src/**/*.js", "./src/**/*.ts"],
    "exclude": ["node_modules"]
}
